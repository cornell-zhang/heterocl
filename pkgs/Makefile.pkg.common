LEVEL = $(PKG_LEVEL)/..

include $(PKG_LEVEL)/Makefile.pkg.config

all clean::
	@ for dir in $(DIRS); do \
		if [ -f $$dir/Makefile ]; then \
			($(MAKE) $@ -C $$dir) || exit 1; \
		else \
			echo "Cannote find Makefile in directory $$dir"; \
		fi; \
	done

%/.dir:
	@ if [ ! -d $* ]; then \
	mkdir -p $* > /dev/null; \
	date > $@; \
	fi
